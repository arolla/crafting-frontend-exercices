  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "biome check",
    "check:fix": "biome check --write",
    "clean": "rimraf dist/",
    "clean:npm:cache": "rimraf -g '**/.npm/'",
    "dev": "vite",
    "dev:css:exercise": "vite serve --config vite.css-exercise.config.ts",
    "format": "biome format",
    "format:fix": "biome format --write",
    "playwright:install": "pnpm exec playwright install chromium",
    "playwright:studio": "pnpm exec playwright open http://localhost:3000/",
    "preview": "vite preview",
    "start": "serve dist",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:serve": "serve -p 6007 storybook-static",
    "test": "npm run test:unit:cover && npm run test:e2e",
    "test:unit": "jest",
    "test:unit:cover": "jest --coverage",
    "test:unit:cover:open": "open-cli dist/test-coverage/lcov-report/index.html",
    "test:e2e": "playwright test",
    "test:e2e:debug": "npm run test:e2e -- --debug",
    "test:e2e:report": "playwright show-report dist/test/e2e/html-report",
    "test:e2e:ui": "playwright test --ui",
    "test:update": "jest -u",
    "validate": "npm run build && npm run check && npm run test"
  },
  "engines": {
    "node": "20.9.0",
    "npm": "10.8.2"
